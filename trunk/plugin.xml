<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="efaia.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="efaia.Perspective"
            id="eFaia.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="efaia.view.FilesView"
            id="eFaia.view.FilesView"
            name="FilesView"
            restorable="true">
      </view>
      <view
            class="efaia.view.TreeView"
            id="eFaia.view.TreeView"
            name="TreeView"
            restorable="true">
      </view>
      <view
            class="efaia.view.AgentStateProperty"
            id="eFaia.view.AgentStateProperty"
            name="Estado Agente"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="efaia.handler.FileOpenHandler"
            id="eFaia.commands.OpenFiles"
            name="OpenFiles">
      </command>
      <command
            defaultHandler="efaia.handler.DirectoryOpenHandler"
            id="eFaia.commands.OpenDirectory"
            name="DirectoryOpen">
      </command>
   </extension>

</plugin>
