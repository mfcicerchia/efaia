<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="efaia.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="efaia.perspective.Perspective"
            id="eFaia.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            class="efaia.view.FilesView"
            id="eFaia.view.FilesView"
            name="FilesView"
            restorable="true">
      </view>
      <view
            class="efaia.view.TreeView"
            id="eFaia.view.TreeView"
            name="TreeView"
            restorable="true">
      </view>
      <view
            class="efaia.view.ASView"
            id="eFaia.view.ASView"
            name="Estado Agente"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="fileMenu"
               label="File">
            <command
                  commandId="eFaia.OpenDirectory"
                  label="Open Directory..."
                  style="push">
            </command>
            <command
                  commandId="eFaia.OpenFile"
                  label="Open File..."
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="efaia.handler.FileOpenHandler"
            id="eFaia.OpenFile"
            name="Open File">
      </command>
      <command
            defaultHandler="efaia.handler.DirectoryOpenHandler"
            id="eFaia.OpenDirectory"
            name="Open Directory">
      </command>
      <command
            id="eFaia.OpenView"
            name="OpenView">
      </command>
   </extension></plugin>
